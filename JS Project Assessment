const NFTs =[]
// this function will take in some values as parameters, create an
// NFT object using the parameters passed to it for its metadata, 
// and store it in the variable above.
function mintNFT (_player,_league,_goals,_assists ) {
const NFT ={
    "Player" : _player,
    "League": _league,
    "Goals":_goals,
    "Assists": _assists,
}
NFTs.push(NFT);
console.log("Minted: " + _player);
}

// create a "loop" that will go through an "array" of NFT's
// and print their metadata with console.log()
function listNFTs () {
for(let i =0; i<NFTs.length;i++){
    console.log("Player Name : " + NFTs[i].Player);
    console.log("League : "+ NFTs[i].League );
    console.log("Goals : "+ NFTs[i].Goals );
    console.log("Assists: "+ NFTs[i].Assists);
}  
}
// print the total number of NFTs we have minted to the console
function getTotalSupply() {
console.log("\n" + NFTs.length);
}
mintNFT("Ronaldo", "Spanish League","62 Goals", "12 Assists" );
mintNFT("Messi", "Spanish League","60 Goals", "14 Assists" );
mintNFT("Bellingham", "Champions League","50 Goals", "15 Assists" );
mintNFT("Kroos", "German League","40 Goals", "30 Assists" );
listNFTs();
getTotalSupply();
